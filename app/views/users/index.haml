.container
  %h1 All users
  = link_to "Register new user", new_user_path, class: 'btn btn-success'
  %table.table
    - @users.each do |user|
      %tr
        %td= link_to(user.name, user_path(user))
        %td= user.email
        %td= link_to 'Delete', user_path(user),  |
            method: :delete,                    |
            data: { confirm: 'Are you sure?' }, |
            class: "btn btn-danger"             |
        %td= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning'
