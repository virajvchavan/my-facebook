.container
  %br/
  .jumbotron
    %h1= @user.name
    %p
      %b> Gender
      \: #{@user.gender}
    %p
      %b> Email
      \: #{@user.email}
    %p= link_to 'Delete', user_path(@user), |
        method: :delete,                    |
        data: { confirm: 'Are you sure?' }, |
        class: 'btn btn-danger'             |
    %p= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning'
    %hr/
    = link_to 'Home', users_path
